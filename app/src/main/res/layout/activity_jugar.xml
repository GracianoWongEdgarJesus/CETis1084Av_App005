<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.edu.cetis108.cetis1084av_app005.Jugar">

    <TextView
        android:id="@+id/txtCorrecto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:text="CORRECTO"
        android:textColor="@android:color/holo_green_light"
        android:textSize="30sp"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="341dp" />

    <TextView
        android:id="@+id/txtIncorrecto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:text="INCORRECTO"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="30sp"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="341dp" />

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Vidas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Vidas: 3"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/Cuenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/Puntos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Puntos: 0"
                android:textAlignment="center"
                android:textSize="24sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imgWolverine"
            android:layout_width="match_parent"
            android:layout_height="213dp"
            android:layout_weight="0.67"
            app:srcCompat="@mipmap/img1" />

        <EditText
            android:id="@+id/txtEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.27"
            android:ems="10"
            android:hint="Ingrese el nombre"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnConfirmar"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:text="Confirmar"
            android:textSize="20sp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
